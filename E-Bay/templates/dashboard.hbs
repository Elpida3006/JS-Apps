 {{> notifications}}
    <!-- Dashboard -->
    <table style="margin: 0 auto; margin-top:5%; margin-bottom: 5%; width: 95%;" class="table table-hover">
        <thead>
            <tr class="bg-warning">
                <th>
                    #
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Price
                </th>
                <th>
                    Details
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                 {{#each offers}}
                <td class="">{{this.index}}</td>
                <td class="">{{this.product}}</td>
                <td class="description">{{this.description}}</td>
                <td class="">{{this.price}}</td>
                <td>
                    <a href='#/details/{{this.id}}' class="btn-primary btn">Order details</a>
                </td>
            
                <td>
                {{#if isCreator}}
                    <a href='#/delete/{{this.id}}' class="btn-danger btn">Delete</a>
                    <a href='#/edit/{{this.id}}' class="btn-info btn">Edit</a>
                {{else}}
                    {{#if isBuyer}}
                    <p>You bought it </p>
                    {{else}}
                    <!--BONUS (Not-Required)--><a href="#/buy/{{this.id}}" class="btn-warning btn">Buy</a><!--BONUS (Not-Required)-->
                    {{/if}}
                {{/if}}
                </td>
            </tr>
            {{else}}
            <tr>
                <td style="text-align: center;" colspan="6">
                    <h2 style="font-style: italic;">There are no offers, we are very sorry...</h2>
                </td>
            </tr>
              {{/each}}
        </tbody>

    </table>
    <!-- /.Dashboard -->
     {{> footer}}